<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer for depth -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="56dp"
                android:topRightRadius="56dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#15000000" />
        </shape>
    </item>
    
    <!-- Main background for dark mode -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="56dp"
                android:topRightRadius="56dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="#1E1E1E" />
            <stroke android:width="0.5dp" android:color="#20FFFFFF" />
        </shape>
    </item>
    
    <!-- Highlight edge for premium look in dark mode -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="56dp"
                android:topRightRadius="56dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <stroke android:width="1dp" android:color="#10FFFFFF" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
