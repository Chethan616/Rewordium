<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="24dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/result_window_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dynamic_glass_background"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="12dp">
            <ImageView
                android:id="@+id/header_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ai_sparkle"
                app:tint="#D0D0D0"
                android:layout_marginStart="8dp" />
            <TextView
                android:id="@+id/result_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/header_icon"
                app:layout_constraintEnd_toStartOf="@id/close_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AI Result"
                android:textColor="#448AFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <ImageButton
                android:id="@+id/close_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                app:tint="#E0E0E0"
                android:background="@drawable/glass_button_background"
                android:contentDescription="Close" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Content Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp"
            android:animateLayoutChanges="true">

            <ProgressBar
                android:id="@+id/loading_indicator"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="#448AFF"
                android:visibility="gone"/>

            <ScrollView
                android:id="@+id/result_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="180dp"
                android:scrollbarThumbVertical="@android:color/white"
                android:visibility="gone">
                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#448AFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif"
                    android:textIsSelectable="true"/>
            </ScrollView>

            <LinearLayout
                android:id="@+id/language_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp"
                android:minHeight="180dp"
                android:visibility="gone">
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translate to..."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/language_button_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" />
                </HorizontalScrollView>
            </LinearLayout>
        </FrameLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingHorizontal="8dp"
            android:paddingBottom="8dp">
            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_refresh"
                app:tint="#B0B0B0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Refresh response"
                android:layout_marginEnd="8dp"/>
            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_copy"
                app:tint="#B0B0B0"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy to clipboard"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>