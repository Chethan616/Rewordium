<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/clipboard_panel_background"
    android:elevation="16dp"
    android:translationZ="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/clipboard_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/clipboard_header_background"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Clipboard Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clipboard_modern"
            android:layout_marginEnd="12dp"
            android:contentDescription="Clipboard" />

        <!-- Title and Subtitle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clipboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clipboard"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/clipboard_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent items"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/close_clipboard_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/clipboard_close_button_background"
            android:src="@drawable/ic_close_modern"
            android:padding="8dp"
            android:contentDescription="Close clipboard panel" />

    </LinearLayout>

    <!-- Filter Tabs -->
    <LinearLayout
        android:id="@+id/clipboard_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/clipboard_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/clipboard_filter_all"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="All"
            android:textColor="@color/clipboard_action_button_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/clipboard_action_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/clipboard_filter_favorites"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Pinned"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:background="@drawable/clipboard_item_background_selector"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/clipboard_clear_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Clear"
            android:textColor="@color/clipboard_delete_button"
            android:textSize="14sp"
            android:background="@drawable/clipboard_item_background_selector"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/clipboard_divider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/clipboard_filters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for clipboard items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clipboard_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="320dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:scrollbarStyle="outsideOverlay"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/clipboard_item_glass" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/clipboard_empty_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_empty_clipboard_modern"
            android:layout_marginBottom="16dp"
            android:alpha="0.6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No clipboard items"
            android:textColor="@color/clipboard_empty_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy text to see it here"
            android:textColor="@color/clipboard_empty_text"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>