<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/keyboard_background"
    android:elevation="8dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:id="@+id/clipboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/accent_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clipboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/clipboard_close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close clipboard panel"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Filter options -->
    <LinearLayout
        android:id="@+id/clipboard_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/keyboard_secondary"
        app:layout_constraintTop_toBottomOf="@id/clipboard_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/clipboard_filter_all"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="All"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:background="@color/key_background"
            android:minHeight="0dp" />

        <Button
            android:id="@+id/clipboard_filter_favorites"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Favorites"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:background="@color/key_background"
            android:minHeight="0dp" />
    </LinearLayout>

    <!-- RecyclerView for clipboard items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clipboard_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/clipboard_filters"
        app:layout_constraintBottom_toTopOf="@id/clipboard_bottom_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty state view -->
    <TextView
        android:id="@+id/clipboard_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No clipboard items yet"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/clipboard_filters"
        app:layout_constraintBottom_toTopOf="@id/clipboard_bottom_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom actions -->
    <LinearLayout
        android:id="@+id/clipboard_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/keyboard_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/clipboard_clear_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear All"
            android:textColor="@color/error"
            android:background="@color/key_background"
            android:minHeight="48dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
