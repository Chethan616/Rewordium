<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/clipboard_card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Main Text Content -->
        <TextView
            android:id="@+id/clipboard_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sample clipboard text content that might be longer and spans multiple lines"
            android:textSize="16sp"
            android:textColor="@color/clipboard_item_text"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action_buttons"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="16dp" />

        <!-- Timestamp and Meta Info -->
        <LinearLayout
            android:id="@+id/meta_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/clipboard_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action_buttons">

            <TextView
                android:id="@+id/clipboard_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 min ago"
                android:textSize="13sp"
                android:textColor="@color/clipboard_item_text_secondary"
                android:fontFamily="sans-serif-medium" />

            <!-- Character count -->
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/dot_separator"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/clipboard_char_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 chars"
                android:textSize="13sp"
                android:textColor="@color/clipboard_item_text_secondary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Pin/Favorite Button -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/clipboard_action_button_background"
                android:src="@drawable/ic_star_outline"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Pin item" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/clipboard_delete_button_background"
                android:src="@drawable/ic_delete_modern"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Delete" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>