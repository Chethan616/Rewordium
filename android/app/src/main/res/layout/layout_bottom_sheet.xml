<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/scrim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0000000"
        android:alpha="0"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_fitToContents="true"
        app:behavior_peekHeight="320dp">

        <LinearLayout
            android:id="@+id/bottom_sheet_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="#4D5057" />

        <RelativeLayout
            android:id="@+id/peek_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:id="@+id/settings_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/ic_grammarly_g"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_grammarly_g"
                    app:tint="#666666"
                    android:contentDescription="Settings"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="AI Assistant"
                    android:textColor="@color/accessibility_dialog_hint"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/persona_selector_layout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_edit_text_enhanced"
                android:gravity="center_vertical"
                android:minWidth="80dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="8dp">
                <TextView
                    android:id="@+id/persona_selector_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="Casual"
                    android:textAllCaps="false"
                    android:textColor="#33A1FF"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/persona_selector_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:tint="#33A1FF" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/expanded_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/persona_options_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#25FFFFFF"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#3033A1FF"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:id="@+id/persona_options_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">
                        <Button
                            android:id="@+id/persona_normal"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Casual"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:background="?android:attr/selectableItemBackground" />
                        <Button
                            android:id="@+id/persona_shakespeare"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Academic"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:background="?android:attr/selectableItemBackground" />
                        <Button
                            android:id="@+id/persona_yoda"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Poetry"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:background="?android:attr/selectableItemBackground" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="#338A8F98" />
                        <Button
                            android:id="@+id/persona_custom"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Custom Persona..."
                            android:textAllCaps="false"
                            android:textColor="#33A1FF"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:background="?android:attr/selectableItemBackground" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/edit_text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text_enhanced"
                    android:gravity="top"
                    android:hint="Type or paste text..."
                    android:inputType="textMultiLine|textCapSentences"
                    android:lineSpacingExtra="4dp"
                    android:minLines="3"
                    android:padding="14dp"
                    android:textColor="@color/accessibility_dialog_text"
                    android:textColorHint="@color/accessibility_dialog_hint"
                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_rewrite"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_auto_awesome"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Generate"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="28dp"/>

                <LinearLayout
                    android:id="@+id/settings_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    tools:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#1A33A1FF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:id="@+id/dark_mode_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_dark_mode"
                                app:tint="#33A1FF"/>

                            <TextView
                                android:id="@+id/dark_mode_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:text="Dark Mode"
                                android:textColor="@color/accessibility_dialog_text"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_dark_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:thumb="@drawable/switch_thumb"
                                android:track="@drawable/switch_track"
                                android:checked="false"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ============ ADDED THIS SECTION FOR CREDITS ============ -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#1A33A1FF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_coin"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/credits_remaining_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:text="Credits Remaining: --"
                                android:textColor="@color/accessibility_dialog_text"
                                android:textSize="15sp"
                                tools:text="Credits Remaining: 18" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thinking_layout"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/bg_edit_text_enhanced"
                    android:visibility="gone">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/ai_processing_animation"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/lottie_ai_processing" />

                    <TextView
                        android:id="@+id/thinking_text_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="sans-serif"
                        android:text="Generating..."
                        android:textColor="@color/accessibility_dialog_hint"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_stop"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Stop"
                        android:textColor="#FF453A"
                        android:textSize="14sp"
                        app:rippleColor="#80FF453A" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/suggestion_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="âœ¨ Here are some options:"
                        android:textColor="@color/accessibility_dialog_hint"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/suggestions_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>