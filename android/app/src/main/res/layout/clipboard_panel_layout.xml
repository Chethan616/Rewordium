<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:elevation="8dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:id="@+id/clipboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clipboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer" />

        <ImageButton
            android:id="@+id/clipboard_close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close clipboard panel" />
    </LinearLayout>

    <!-- Filter options -->
    <LinearLayout
        android:id="@+id/clipboard_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/clipboard_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/clipboard_filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All"
            android:textStyle="bold"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/clipboard_filter_favorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Favorites"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/textColorSecondary" />

        <Button
            android:id="@+id/clipboard_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorError" />
    </LinearLayout>

    <!-- Clipboard items list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clipboard_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/clipboard_filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty state view -->
    <TextView
        android:id="@+id/clipboard_empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="No clipboard items to display"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/clipboard_filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
