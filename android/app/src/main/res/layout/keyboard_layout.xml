<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:paddingTop="2dp"
    android:paddingBottom="6dp">

    <!-- Top bar with paraphrase button and persona buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/keyboard_secondary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:baselineAligned="false">

        <!-- AI Paraphrase Button -->
        <TextView
            android:id="@+id/paraphrase_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="AI"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/paraphrase_button_background"
            android:elevation="2dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="@string/tap_ai_to_paraphrase" />

        <!-- Persona Buttons -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:fillViewport="true">

            <include
                android:id="@+id/persona_buttons"
                layout="@layout/persona_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </HorizontalScrollView>

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/tap_ai_to_paraphrase"
            android:textColor="@color/text_secondary"
            android:gravity="end|center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:includeFontPadding="false"
            android:paddingTop="2dp" />
    </LinearLayout>

    <!-- Main keyboard container -->
    <LinearLayout
        android:id="@+id/keyboard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/keyboard_padding_horizontal"
        android:paddingTop="@dimen/keyboard_padding_vertical"
        android:paddingBottom="@dimen/keyboard_bottom_padding"
        android:clipToPadding="false"
        android:minHeight="300dp"
        android:elevation="2dp"
        android:background="@color/keyboard_background">

        <!-- Number row -->
        <LinearLayout
            android:id="@+id/number_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/keyboard_row_spacing"
            android:gravity="center"
            android:baselineAligned="false">
            <!-- Keys added programmatically -->
        </LinearLayout>

        <!-- First row (QWERTYUIOP) -->
        <LinearLayout
            android:id="@+id/row_qwerty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/keyboard_row_spacing"
            android:gravity="center"
            android:baselineAligned="false">
            <!-- Keys added programmatically -->
        </LinearLayout>

        <!-- Second row (ASDFGHJKL) -->
        <LinearLayout
            android:id="@+id/row_asdfghjkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/keyboard_row_spacing"
            android:gravity="center"
            android:baselineAligned="false">
            <!-- Keys added programmatically -->
        </LinearLayout>

        <!-- Third row (ZXCVBNM) -->
        <LinearLayout
            android:id="@+id/row_zxcvbnm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/keyboard_row_spacing"
            android:gravity="center"
            android:baselineAligned="false">
            <!-- Keys added programmatically -->
        </LinearLayout>

        <!-- Bottom row (space, etc) -->
        <LinearLayout
            android:id="@+id/bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:clipToPadding="false"
            android:layout_marginTop="2dp">
            <!-- Keys added programmatically -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
