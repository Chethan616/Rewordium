<?xml version="1.0" encoding="utf-8"?>
<!-- Wrapper Layout to prevent animation flicker -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Your original, styled menu card. This is what gets animated. -->
    <LinearLayout
        android:id="@+id/menu_card_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu_background"
        android:paddingVertical="8dp"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:elevation="16dp"
        android:outlineAmbientShadowColor="#3C3C4399"
        android:outlineSpotShadowColor="#3C3C4399"
        android:outlineProvider="background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:text="Quick Actions"
            android:textColor="#8E8E93"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:letterSpacing="0.07" />
        <TextView
            android:id="@+id/ai_translator"
            style="@style/MenuItemStyle"
            android:drawableStart="@drawable/ic_translate"
            android:text="Translate" />
        <View style="@style/DividerStyle" />
        <TextView
            android:id="@+id/ai_summary"
            style="@style/MenuItemStyle"
            android:drawableStart="@drawable/ic_summary"
            android:text="Summarize" />
        <View style="@style/DividerStyle" />
        <TextView
            android:id="@+id/ai_grammar_check"
            style="@style/MenuItemStyle"
            android:drawableStart="@drawable/ic_grammar"
            android:text="Grammar Check"
            android:paddingBottom="1dp" />

    </LinearLayout>
</FrameLayout>