<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Base semi-transparent color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Layer 2: A soft radial gradient for a "sheen" from the top-left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#22FFFFFF"
                android:endColor="@android:color/transparent"
                android:centerX="0.1"
                android:centerY="0.1" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Layer 3: A subtle dark inner shadow for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#1A000000"
                android:centerColor="#00000000"
                android:centerX="0.5"
                android:centerY="1.2"
                android:type="linear" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Layer 4: The crisp outer border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#55FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>