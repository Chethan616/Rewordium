<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#20000000" />
                </shape>
            </item>
            <!-- Main background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="#00875E"
                        android:centerColor="#007A56"
                        android:endColor="#006B4B"
                        android:type="linear" />
                    <stroke android:width="1dp" android:color="#005A3F" />
                </shape>
            </item>
            <!-- Glass overlay -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="7dp" />
                    <gradient
                        android:angle="270"
                        android:startColor="#15FFFFFF"
                        android:endColor="#05FFFFFF"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default State -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#15000000" />
                </shape>
            </item>
            <!-- Main background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="#00B378"
                        android:centerColor="#00A875"
                        android:endColor="#009B6E"
                        android:type="linear" />
                    <stroke android:width="1dp" android:color="#00875E" />
                </shape>
            </item>
            <!-- Glass overlay -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="7dp" />
                    <gradient
                        android:angle="270"
                        android:startColor="#20FFFFFF"
                        android:endColor="#08FFFFFF"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
