<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed/Selected State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="#E8F5F1FF"
                android:endColor="#E1F2EDFF"
                android:type="linear" />
            <stroke 
                android:width="2dp" 
                android:color="#009B6E" />
        </shape>
    </item>
    
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="#E8F5F1FF"
                android:endColor="#E1F2EDFF"
                android:type="linear" />
            <stroke 
                android:width="2dp" 
                android:color="#009B6E" />
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="#FFFFFFFF"
                android:endColor="#F9FCFBFF"
                android:type="linear" />
            <stroke 
                android:width="1dp" 
                android:color="#15009B6E" />
        </shape>
    </item>
    
</selector>
