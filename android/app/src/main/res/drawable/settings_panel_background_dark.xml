<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:top="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
            <solid android:color="#30000000" />
        </shape>
    </item>
    
    <!-- Main background with dark gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#F51C1C20"
                android:centerColor="#F0161620" 
                android:endColor="#EB121216" />
            <stroke 
                android:width="1dp" 
                android:color="#3CFFFFFF" />
        </shape>
    </item>
    
    <!-- Glass effect overlay -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="27dp" android:topRightRadius="27dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#08FFFFFF" />
        </shape>
    </item>
</layer-list>
