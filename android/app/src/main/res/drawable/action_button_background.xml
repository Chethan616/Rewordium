<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#12000000" />
                </shape>
            </item>
            
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#70007AFF"
                        android:centerColor="#60007AFF"
                        android:endColor="#50005BBF" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#30007AFF" />
                </shape>
            </item>
            
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="19dp" />
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#20FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <item android:top="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#10000000" />
                </shape>
            </item>
            
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#65FFFFFF"
                        android:centerColor="#55F5F7FF"
                        android:endColor="#45F0F5FF" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#20000000" />
                </shape>
            </item>
            
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="19dp" />
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#15FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
