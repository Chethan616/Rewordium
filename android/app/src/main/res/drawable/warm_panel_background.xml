<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Warm background base -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="135"
                android:startColor="#FDFEFEFF"
                android:centerColor="#F9FCFBFF"
                android:endColor="#F5F9F7FF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle green accent -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp" />
            <gradient
                android:angle="0"
                android:startColor="#08009B6E"
                android:centerColor="#05009B6E"
                android:endColor="#02009B6E"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:angle="270"
                android:startColor="#12009B6E"
                android:endColor="#06009B6E"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#15009B6E" />
        </shape>
    </item>
    
</layer-list>
