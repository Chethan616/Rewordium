<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Card shadow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#18000000" />
        </shape>
    </item>
    
    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#50FFFFFF"
                android:centerColor="#40F8FAFF"
                android:endColor="#35F0F8FF" />
            <stroke 
                android:width="1dp" 
                android:color="#30000000" />
        </shape>
    </item>
    
    <!-- Clipboard item highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#18FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Left accent bar for clipboard items -->
    <item android:top="12dp" android:left="0dp" android:right="320dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp" />
            <solid android:color="#40007AFF" />
        </shape>
    </item>
</layer-list>
