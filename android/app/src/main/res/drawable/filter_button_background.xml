<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#FF007AFF"
                        android:endColor="#FF0056CC" />
                </shape>
            </item>
            <!-- Pressed overlay -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#20000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Selected/Active state -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#FF007AFF"
                        android:endColor="#FF0056CC" />
                </shape>
            </item>
            <!-- Active glow effect -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="20dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="19dp" android:topRightRadius="19dp" />
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#15000000" />
                </shape>
            </item>
            
            <!-- Main background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#4064AAFF"
                        android:centerColor="#30007AFF"
                        android:endColor="#200056CC" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#30007AFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
