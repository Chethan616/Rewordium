<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Card shadow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#32FFFFFF"
                android:centerColor="#28FFFFFF"
                android:endColor="#20FFFFFF" />
            <stroke 
                android:width="1dp" 
                android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Subtle shine effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
