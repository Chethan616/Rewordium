<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <layer-list>
            <!-- Outer shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1A000000" />
                    <corners android:radius="14dp" />
                    <padding android:bottom="2dp" />
                </shape>
            </item>
            
            <!-- Gradient outline -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="0"
                        android:startColor="#4A90E2"
                        android:endColor="#9012ED"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                    <padding android:left="1.5dp"
                        android:right="1.5dp"
                        android:top="1.5dp"
                        android:bottom="1.5dp" />
                </shape>
            </item>
            
            <!-- Inner background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2A2A2C" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            
            <!-- Subtle highlight at top -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners android:radius="10dp" />
                    <padding android:bottom="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>