<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DADCE0" />
            <corners android:radius="@dimen/key_radius" />
            <padding android:left="@dimen/key_padding" android:top="@dimen/key_padding" 
                android:right="@dimen/key_padding" android:bottom="@dimen/key_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1F3F4" />
            <corners android:radius="@dimen/key_radius" />
            <padding android:left="@dimen/key_padding" android:top="@dimen/key_padding" 
                android:right="@dimen/key_padding" android:bottom="@dimen/key_padding" />
        </shape>
    </item>
</selector>
