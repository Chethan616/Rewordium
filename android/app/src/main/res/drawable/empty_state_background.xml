<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Empty state shadow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#12000000" />
        </shape>
    </item>
    
    <!-- Main empty state background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#60FFFFFF"
                android:centerColor="#50F8FAFF"
                android:endColor="#40F0F8FF" />
            <stroke 
                android:width="1dp" 
                android:color="#25000000" />
        </shape>
    </item>
    
    <!-- Glass effect overlay -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="23dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Center spotlight effect -->
    <item android:top="80dp" android:left="80dp" android:right="80dp" android:bottom="80dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#15007AFF"
                android:endColor="#00007AFF" />
        </shape>
    </item>
</layer-list>
