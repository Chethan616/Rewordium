<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00875E"
                android:endColor="#006B4B"
                android:type="linear" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#005A3F"/>
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00A875"
                android:endColor="#009B6E"
                android:type="linear" />
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#00C785"/>
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00B378"
                android:endColor="#009B6E"
                android:type="linear" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#00875E"/>
        </shape>
    </item>
    
</selector>