<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: The semi-transparent gradient base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#66333333"
                android:centerColor="#55111111"
                android:endColor="#44000000"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Layer 2: A subtle inner highlight on top to simulate light catching the edge -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Layer 3: The border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#55FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>