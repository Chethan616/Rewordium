<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clipboard_item_hover" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/clipboard_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/clipboard_item_background" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/clipboard_border" />
        </shape>
    </item>
</selector>
