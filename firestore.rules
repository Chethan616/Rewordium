rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin function - check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'chethankrishna2022@gmail.com';
    }
    
    // App configuration - allow anyone to read version info for updates
    match /app_config/{document} {
      allow read: if true;  // Anyone can read app config (for update checking)
      allow write: if isAdmin(); // Only admin can write
    }
    
    // Users collection - allow authenticated users + admin full access
    match /users/{userId} {
      // Admin has full access to all user data
      allow read, write: if isAdmin();
      
      // Users can read/write their own data when authenticated
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow payment portal to update subscription fields
      allow write: if request.writeFields.hasOnly(['isPro', 'planType', 'subscription', 'lastUpdated']) &&
                      request.resource.data.isPro is bool;
    }
    
    // Notifications collection - admin can read/write, users can read
    match /notifications/{notificationId} {
      allow read, write: if isAdmin();
      allow read: if request.auth != null;
    }
    
    // Payments collection - allow payment portal to create records
    match /payments/{paymentId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Admin panel collections - only admin access
    match /admin/{document} {
      allow read, write: if isAdmin();
    }
    
    // Test collection for debugging
    match /_test/{document} {
      allow read, write: if true;
    }
  }
}
